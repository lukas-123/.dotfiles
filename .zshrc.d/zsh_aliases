alias xclip='xclip -selection c'
alias setclip='xclip -selection c'
alias getclip='xclip -selection clipboard -o'
livetwitcher() {
    livestreamer --default-stream best "${@:1:${#}-1}" twitch.tv/"${@: -1}"
}

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# some more ls aliases
alias ll='ls -l'
alias la='ls -la'
alias lah='ls -lah'
alias l='ls -CF'

alias zshrc='vim ~/.zshrc'
alias zshrc_reload='exec zsh' 

alias bm='wd add'
alias to='wd'

# go up directories
..(){
    cd ../$@
}

..2()
{
    cd ../../$@
}

# mount hdd on desktop
alias hdd_mount='sudo mount /dev/sdb2 /mnt/hdd'

# Disable glob so that [] is parsed correctly
alias craftr='noglob craftr'
